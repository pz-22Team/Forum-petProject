<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="361.0" prefWidth="242.0" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.forum.user.controllers.MainSceneController">
   <children>
      <HBox alignment="CENTER" prefHeight="10.0" prefWidth="219.0" spacing="5.0">
         <children>
            <ImageView fitHeight="32.0" fitWidth="42.0" onMouseClicked="#onProfileButtonClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../profile.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="32.0" fitWidth="54.0" onMouseClicked="#onLogOutButtonClicked" onMousePressed="#onLogOutButtonClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../logout.png" />
               </image>
            </ImageView>
            <Region prefHeight="78.0" prefWidth="140.0" />
            <ImageView fitHeight="56.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../chat.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" />
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label prefHeight="27.0" prefWidth="216.0" text="Type your comment here:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <TextArea fx:id="messageArea" prefHeight="190.0" prefWidth="274.0" />
      <Button mnemonicParsing="false" onAction="#onSendButtonClicked" prefHeight="24.0" prefWidth="77.0" text="Send" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
